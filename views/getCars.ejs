    <section id="form">
        <div class="container-md">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2 driver-custom">
                            <label for="validationDefault01" class="form-label">Tipe Driver</label>
                            <select class="form-select" id="driver" required>
                                <option selected disabled value="" hidden>Pilih Tipe Driver</option>
                                <option value="true">Dengan Sopir</option>
                                <option value="false">Tanpa Sopir (Lepas Kunci)</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="validationDefault02" class="form-label">Tanggal</label>
                            <input class="form-control textbox-n" id="date" type="date" placeholder="Pilih Tanggal" required>
                        </div>
                        <div class="col-md-2">
                            <label for="validationDefault03" class="form-label">Waktu Jemput/Ambil</label>
                            <input class="form-control textbox-n" id="time" type="time" placeholder="Pilih Waktu" required>
                        </div>
                        <div class="col-md-3">
                            <label for="validationDefault04" class="form-label">Jumlah Penumpang (optional)</label>
                            <input class="form-control textbox-n" id="capacity" type="number" min="1" placeholder="Jumlah Penumpang">
                        </div>
                        <div class="col-md-2">
                            <input class="btn btn-success" type="submit" id="load-btn" value="Cari Mobil">
                        </div>
                        <div class="col-md-1">
                            <input class="btn btn-outline-success" type="reset" id="clear-btn" value="Reset">
                        </div>
                    </div>
                </div>
            </div>
        </div>
